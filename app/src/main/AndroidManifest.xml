<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sergio_pieza.aplicaciontp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.InicioActivity"
            android:label="@string/app_name" />
        <activity android:name=".activity.HomeActivity">   <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        </activity>
        <activity android:name=".activity.LoginActivity"></activity>
        <activity
            android:name=".activity.RegistrarActivity"
            android:label="@string/title_activity_registrar"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.SubirMomento"
            android:label="@string/title_activity_subir_momento"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>